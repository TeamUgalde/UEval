- model_class = School
.page-header
  %h1.title 
    %i.fa.fa-book Escuelas
  %hr

  #sorts.button-group
  %button.button.is-checked{"data-sort-by" => "original-order"} Orden Original
  %button.button{"data-sort-by" => "name"} Nombre

  %hr
  .row
    .col-md-10.col-md-offset-1
      .isotope
        - @schools.each do |school|
          .element-item
            %h3.name= school.name
            %a{:href => '#'} Ver cursos y profesores
  %hr
  
%script{:src => "//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.2.0/isotope.pkgd.min.js"}